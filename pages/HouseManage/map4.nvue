				let arr2 = [];
				if (this.polygonPath !== "") {
					let arr = this.polygonPath.split(";");
					for (let i = 0; i < arr.length; i++) {
						let arr3 = arr[i].split(",");
						arr2.push({
							lng: parseFloat(arr3[0]),
							lat: parseFloat(arr3[1])
						});
					}
				}
				return arr2;
			}
